---
import TreeDetails from "../components/TreeDetails.astro";
import MainContentLayout from "../layouts/MainContentLayout.astro";

const plantingText =
  "Red Oaks thrive in well-drained, loamy soil and full sun. They prefer slightly acidic to neutral soil.";
const careText =
  "Water young trees regularly. Once established, they are relatively drought-tolerant. Fertilize in early spring and prune to shape as needed.";
---

<MainContentLayout>
  <TreeDetails
    id="red-oak"
    name="Red Oak"
    imageSrc="https://www.plantingtree.com/cdn/shop/products/3114.jpg?v=1614189423"
    imageDescription="Red Oak Tree"
    plantingInstructions={plantingText}
    careInstructions={careText}
  />
</MainContentLayout>
