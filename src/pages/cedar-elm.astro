---
import TreeDetails from "../components/TreeDetails.astro";
import MainContentLayout from "../layouts/MainContentLayout.astro";

const plantingText =
  "Cedar Elms prefer full sun and well-drained soil. They are adaptable to various soil types but grow best in a slightly acidic to neutral pH.";
const careText =
  "Water regularly during dry periods. Cedar Elms are relatively low-maintenance. Prune to remove any crossing branches and improve air circulation.";
---

<MainContentLayout>
  <TreeDetails
    id="cedar-elm"
    name="Cedar Elm"
    imageSrc="https://bowerandbranch.com/cdn/shop/products/Allee1.jpg?v=1680786474"
    imageDescription="Cedar Elm Tree"
    plantingInstructions={plantingText}
    careInstructions={careText}
  />
</MainContentLayout>
